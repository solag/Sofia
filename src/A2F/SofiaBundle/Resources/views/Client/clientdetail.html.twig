{% extends "A2FSofiaBundle::layout.html.twig" %}

{% block breadcrumbs %}
    {{parent()}} > <a href="{% if app.user.client is defined %}{{path("a2fSofia_client_detail", {"id": app.user.client.id, "type":"REQUESTER"} )}}{%endif%}">Profil de l'entreprise</a>
{% endblock breadcrumbs %}

{% block content %}
    
        
    <div class="row">
       <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-12 sectionHeader">
                    <div class="row">
                        <div class="col-xs-11 no-padding">
                            <div class="col-xs-1 boxPictoHeader">
                                <img id="pictoCompany" class="picto" alt="Profil client" src="{{ asset("bundles/a2fsofia/images/Company.png") }}" />
                            </div>
                            <div class="col-xs-11">
                                 <h3>Entreprise</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section class="col-xs-12">
        {% include ("A2FSofiaBundle:Client:clientview.html.twig") %}
        </section>  
    </div>
        {% render(controller("A2FSofiaBundle:Contract:list", {"id": app.user.client.id})) %}
        {% render(controller("A2FSofiaBundle:User:list", {"id": app.user.client.id, "type":"REQUESTER"})) %}
        
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
     <script type="text/javascript">
    $(document).ready(function() {
    $( ".selector" ).accordion();

    $( ".accordion" ).accordion();
    
});
</script>

{% endblock javascripts %}